<%- include('partials/start') %>
<%- include('partials/nav') %>

<main>
  <!-- User Data Section -->
  <section id="users" class="users section">

    <div class="container mt-5">
      <div class="container section-title">
        <h2>User List</h2>
        <p>Manage Users</p>

        <div class="text-right mb-4"></div>
        <a href="/admin/users/create" class="btn btn-success">Add New User</a>
      </div>
    </div>

    <div class="container">
      <div class="row gy-4">
        <div class="col-md-12">
          <% if (users && users.length > 0) { %>
            <table id="userTable" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Username</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Address</th>
                  <th>Role</th>
                  <th>Actions</th> <!-- Add this for action buttons -->
                </tr>
              </thead>
              <tbody>
                <% users.forEach(function(user, index) { %>
                <tr>
                  <td><%= user.firstname + ' ' + user.lastname %></td>
                  <td><%= user.username %></td>
                  <td><%= user.email %></td>
                  <td><%= user.phone %></td>
                  <td><%= user.address %></td>
                  <td><%= user.role %></td>
                  <td>
                    <!-- View Button -->
                    <a href="/admin/users/<%= user.id %>" class="btn btn-primary btn-sm">View</a>
            
                    <!-- Delete Button -->
                    <form action="/admin/users/<%= user.id %>?_method=DELETE" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>            
          <% } else { %>
          <h1>No users registered</h1>
          <% } %>
        </div>
      </div>
    </div>
  </section><!-- /User Section -->

</main>

