<%- include('partials/start') %>
<%- include('partials/nav') %>

<section id="products" class="products section">
  <div class="container mt-5"></div>
  <div class="container section-title">
    <h2>Products</h2>
    <p>View and manage your products</p>
  </div>

  <!-- Check if there are products to display -->
  <div class="container">
    <div class="col-lg-12">
      <% if (product) { %>
        <div class="row row justify-content-center gy-4">
            <div class="col-md-4">
                <div class="card">
                  <!-- Display the product image -->
                  <img src="<%= product.images %>" class="card-img-top" alt="<%= product.name %>">
                  <div class="card-body">
                    <h5 class="card-title"><%= product.name %></h5>
                    <p class="card-text">â‚±<%= product.price %></p>
                    <p class="card-text"><%= product.description %></p>
                    <p class="card-text"><strong>Categories:</strong>
                      <% if (product.categories && product.categories.length > 0) { %>
                        <% product.categories.forEach(function(category) { %>
                          <span class="badge bg-primary"><%= category.name %></span>
                        <% }); %>
                      <% } else { %>
                        <span>No categories</span>
                      <% } %>
                    </p>
  
                    <!-- Edit and Delete Buttons -->
                    <a href="/products/edit/<%= product.id %>" class="btn btn-warning">Edit</a>
                    <a href="/products/delete/<%= product.id %>" class="btn btn-danger">Delete</a>
                  </div>
                </div>
              </div>
        </div>
      <% } else { %>
        <p>No products available.</p>
      <% } %>
    </div>
  </div>
</section>

<%- include('partials/end') %>
