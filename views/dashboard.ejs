    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
        // Embed server-side variable directly (ensure it's valid and wrapped in Number())
        const totalSales = Number('<%= totalSales %>'); // Ensure this value is a number
    
        // Initialize the line chart
        const ctx = document.getElementById('dashboardChart').getContext('2d');
        const dashboardChart = new Chart(ctx, {
            type: 'line', // Changed to 'line'
            data: {
                labels: ['Total Sales'], // Only showing Total Sales
                datasets: [{
                    label: 'Total Sales',
                    data: [totalSales], // Using only totalSales
                    backgroundColor: 'rgba(75, 192, 192, 0.6)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    fill: false, // Disable fill under the line
                    borderWidth: 2
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true // Y-axis starts at 0
                    }
                }
            }
        });
    
            // Navigation functionality
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    if (!this.getAttribute('data-bs-toggle')) {
                        e.preventDefault();
                        const target = this.getAttribute('href').substring(1);
                        document.querySelectorAll('.content-section').forEach(section => {
                            section.style.display = 'none';
                        });
                        document.getElementById(target).style.display = 'block';
    
                        // Update active state
                        document.querySelectorAll('.nav-link').forEach(navLink => {
                            navLink.classList.remove('active');
                        });
                        this.classList.add('active');
                    }
                });
            });
    
            // Set dashboard as default view
            document.getElementById('dashboard').style.display = 'block';
    
            // Functionality for the Share button
            const shareBtn = document.getElementById('shareBtn');
            const shareModal = new bootstrap.Modal(document.getElementById('shareModal'));
            const copyShareLink = document.getElementById('copyShareLink');
    
            shareBtn.addEventListener('click', () => {
                shareModal.show();
            });
    
            copyShareLink.addEventListener('click', () => {
                const shareLink = document.querySelector('#shareModal input');
                shareLink.select();
                document.execCommand('copy');
                copyShareLink.textContent = 'Copied!';
                setTimeout(() => {
                    copyShareLink.textContent = 'Copy Link';
                }, 2000);
            });
    
            // Functionality for the Export button
            const exportBtn = document.getElementById('exportBtn');
            exportBtn.addEventListener('click', () => {
                alert('Exporting dashboard data...');
                // This would trigger the data export process in a real application
            });
    
            // Functionality for the date range dropdown
            const dateRangeText = document.getElementById('dateRangeText');
            const dateRangeItems = document.querySelectorAll('.dropdown-item[data-range]');
    
            dateRangeItems.forEach(item => {
                item.addEventListener('click', (e) => {
                    e.preventDefault();
                    const selectedRange = e.target.getAttribute('data-range');
                    dateRangeText.textContent = e.target.textContent;
                    updateDashboardData(selectedRange);
                });
            });
    
            function updateDashboardData(range) {
                console.log(`Updating dashboard data for range: ${range}`);
                // In a real application, this would fetch new data and update the charts/tables
            }
    
            // Example usage: Update chart based on selected range
            document.querySelectorAll('.dropdown-item[data-range]').forEach(item => {
                item.addEventListener('click', (e) => {
                    const range = e.target.getAttribute('data-range');
                    let newData;
    
                    switch(range) {
                        case 'day':
                            newData = [5, 10, 8, 15, 6, 11, 9];
                            break;
                        case 'week':
                            newData = [35, 40, 38, 55, 46, 51, 49];
                            break;
                        case 'month':
                            newData = [150, 170, 160, 190, 180, 200, 185];
                            break;
                        case 'year':
                            newData = [1800, 2000, 1900, 2200, 2100, 2300, 2150];
                            break;
                    }
                    updateChartData(dashboardChart, newData);
                });
            });
    
            function updateChartData(chart, newData) {
                chart.data.datasets[0].data = newData;
                chart.update();
            }
        });
    </script>
     
