<%- include('partials/start') %>
  <%- include('partials/nav') %>

    <section id="team" class="team section">
      <div class="container section-title">
        <h2>Upload</h2>
        <p>Add Products to your shop</p>
      </div>

      <div class="container">
        <form action="/admin/products/post" method="POST" enctype="multipart/form-data">

          
          <!-- Upload Picture Field -->
          <div class="row row justify-content-center gy-4">
            <div class="col-md-6 text-start">
              <label for="picture" class="form-label">Upload Picture:</label>
              <div class="input-group input-group-lg mb-3">
                <input type="file" name="image" id="image" accept="image/png, image/jpeg, image/gif"
                  class="form-control" required><br><br>
              </div>
            </div>
          </div>

          <!-- Product Name Field -->
          <div class="row row justify-content-center gy-4 mt-3">
            <div class="col-md-6 text-start">
              <label for="name" class="form-label">First Name:</label>
              <input type="text" name="name" id="name" class="form-control" placeholder="Enter product name"
                required><br><br>
            </div>
          </div>

          <div class="row row justify-content-center gy-4 mt-3">
            <div class="col-md-6 text-start">
              <label for="name" class="form-label">Last Name:</label>
              <input type="text" name="name" id="name" class="form-control" placeholder="Enter product name"
                required><br><br>
            </div>
          </div>

          <div class="row row justify-content-center gy-4 mt-3">
            <div class="col-md-6 text-start">
              <label for="name" class="form-label">Username:</label>
              <input type="text" name="name" id="name" class="form-control" placeholder="Enter product name"
                required><br><br>
            </div>
          </div>

          <div class="row row justify-content-center gy-4 mt-3">
            <div class="col-md-6 text-start">
              <label for="name" class="form-label">Email:</label>
              <input type="text" name="name" id="name" class="form-control" placeholder="Enter product name"
                required><br><br>
            </div>
          </div>

          <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="text" class="form-control" name="phone" id="phone" value="<%= user.phone %>">
          </div>

          <div class="form-group">
            <label for="address">Address</label>
            <textarea class="form-control" name="address" id="address"><%= user.address %></textarea>
          </div>

          <!-- Submit Button -->
          <div class="row row justify-content-center gy-4 mt-3">
            <div class="col-md-6 text-center">
              <button type="submit">Edit</button>
            </div>
          </div>
          <!-- Cancel Button -->
          <div class="row row justify-content-center gy-4 mt-3">
            <div class="col-md-6 text-center">
              <button type="submit">Cancel</button>
            </div>
          </div>
        </form>
      </div>

    </section>


    <%- include('partials/end') %>