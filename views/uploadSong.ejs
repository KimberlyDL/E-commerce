<%- include('partials/start') %>
  <%- include('partials/nav') %>

    <section id="team" class="team section">
      <div class="container mt-5"></div>
      <div class="container section-title">
        <h2>Upload</h2>
        <p>Lift up your mood</p>
      </div>

      <div class="col-lg-12">
        <form action="/music/local/upload" method="POST" enctype="multipart/form-data">
        <div class="row row justify-content-center gy-4">
          <div class="col-md-6 text-start">
            <label for="song" class="form-label">Upload Song (MP3/WAV):</label>
            <div class="input-group input-group-lg mb-3">
              <input type="file" name="song" id="song" accept="audio/*" class="form-control" required><br><br>
            </div>
          </div>
        </div>
        <div class="row row justify-content-center gy-4">
          <div class="col-md-6 text-center">
            <button type="submit">Upload Song</button>
          </div>

        </div>
        </form>
      </div>


      </div>
    </section>



    <%- include('partials/end') %>