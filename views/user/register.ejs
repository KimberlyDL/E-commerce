<%- include('../partials/start') %>
  <%- include('../partials/nav') %>


    <main>
      <!-- Artist Section -->
      <section id="team" class="team section">

        <div class="container mt-5">
          <div class="container section-title">
            <h2>Register</h2>
            <p>Create your account</p>

          </div>
        </div>

        <div class="container">
          <div class="row justify-content-center mt-4">
            <div class="col-md-6">
              <form action="/signup" method="POST">
                <!-- Error Messages -->
                <% if (errors) { %>
                  <div class="alert alert-danger">
                    <ul>
                      <% errors.forEach(function(error) { %>
                        <li>
                          <%= error.msg %>
                        </li>
                        <% }) %>
                    </ul>
                  </div>
                  <% } %>

                    <!-- First Name -->
                    <div class="mb-3">
                      <label for="firstName" class="form-label">First Name</label>
                      <input id="firstName" name="firstName" type="text" class="form-control"
                        autocomplete="given-name" required value="<%= formData ? formData.firstName : '' %>">
                    </div>

                    <!-- Last Name -->
                    <div class="mb-3">
                      <label for="lastName" class="form-label">Last Name</label>
                      <input id="lastName" name="lastName" type="text" class="form-control" autocomplete="family-name"
                        required value="<%= formData ? formData.lastName : '' %>">
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                      <label for="email" class="form-label">Email address</label>
                      <input id="email" name="email" type="email" class="form-control" autocomplete="email" required
                        value="<%= formData ? formData.email : '' %>">
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input id="password" name="password" type="password" class="form-control" required>
                    </div>

                    <!-- Confirm Password -->
                    <div class="mb-3">
                      <label for="passwordConfirm" class="form-label">Confirm Password</label>
                      <input id="passwordConfirm" name="passwordConfirm" type="password" class="form-control"
                        required>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid">
                      <button type="submit" class="btn btn-primary">Sign up</button>
                    </div>
              </form>

              <p class="mt-4 text-center text-muted">
                Already have an account?
                <a href="/signin" class="text-decoration-none">Sign in</a>
              </p>
            </div>
          </div>
        </div>
      </section><!-- /Artist Section -->

    </main>
    <%- include('../partials/end') %>