<%- include('../../partials/start') %>
<%- include('../../partials/nav') %>

<section class="section user-details">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow-lg">
          <div class="card-header text-center bg-primary text-white">
            <h2>User Details</h2>
          </div>
          <div class="card-body">
            <div class="row mb-3">
              <div class="mb-4">
                <% if (user.avatar) { %>
                <img src="<%= user.avatar %>" alt="User Avatar" class="img-thumbnail" style="width: 150px; height: 150px;">
                <% } else { %>
                <img src="/uploads/user/defaultAvatar.jpg" alt="Default Avatar" class="img-thumbnail" style="width: 150px; height: 150px;">
                <% } %>
              </div>
              <div class="col-md-6">
                <p><strong>First Name:</strong></p>
                <p class="form-control">
                  <%= user.firstname %>
                </p>
              </div>
              <div class="col-md-6">
                <p><strong>Last Name:</strong></p>
                <p class="form-control">
                  <%= user.lastname %>
                </p>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <p><strong>Username:</strong></p>
                <p class="form-control">
                  <%= user.username ? user.username : 'N/A' %>
                </p>
              </div>
              <div class="col-md-6">
                <p><strong>Email:</strong></p>
                <p class="form-control">
                  <%= user.email %>
                </p>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <p><strong>Phone:</strong></p>
                <p class="form-control">
                  <%= user.phone ? user.phone : 'N/A' %>
                </p>
              </div>
              <div class="col-md-6">
                <p><strong>Address:</strong></p>
                <p class="form-control">
                  <%= user.address ? user.address : 'N/A' %>
                </p>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <p><strong>Role:</strong></p>
                <p class="form-control">
                  <%= user.role %>
                </p>
              </div>
              <div class="col-md-6">
                <p><strong>Created At:</strong></p>
                <p class="form-control">
                  <%= user.createdAt.toDateString() %>
                </p>
              </div>
            </div>

            <div class="text-center mt-4">
              <a href="/admin/users/edit/<%= user.id %>" class="btn btn-warning">Edit</a>
              <form action="/admin/users/delete/<%= user.id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
              </form>
              <a href="/admin/users" class="btn btn-secondary">Back to Users</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../../partials/end') %>