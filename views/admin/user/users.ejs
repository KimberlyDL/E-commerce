<%- include('../../partials/start') %>
<%- include('../../partials/nav') %>

<main>
  <!-- User Data Section -->
  <section id="users" class="users section">

    <div class="container mt-5">
      <div class="container section-title">
        <h2>User List</h2>
        <p>Manage Users</p>

        <div class="text-right mb-4"></div>
        <a href="/admin/users/create" class="btn btn-success">Add New User</a>
      </div>
    </div>

    <div class="container">
      <div class="row gy-4">
        <div class="col-md-12">
          <% if (users && users.length > 0) { %>
          <table id="userTable" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Role</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(function(user, index) { %>
              <tr>
                <td>
                  <%= user.firstname + ' ' + user.lastname %>
                </td>
                <td>
                  <%= user.username %>
                </td>
                <td>
                  <%= user.email %>
                </td>
                <td>
                  <%= user.phone %>
                </td>
                <td>
                  <%= user.address %>
                </td>
                <td>
                  <%= user.role %>
                </td>
                <td>
                  <!-- Action buttons: View, Edit, Delete -->
                  <a href="/admin/users/<%= user.id %>" class="btn btn-info btn-sm">View</a>
                  <a href="/admin/users/edit/<%= user.id %>" class="btn btn-warning btn-sm">Edit</a>
                  <form action="/admin/users/delete/<%= user.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                  </form>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
          <% } else { %>
          <h1>No users registered</h1>
          <% } %>
        </div>
      </div>
    </div>
  </section><!-- /User Section -->

</main>

<!-- jQuery and DataTables JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

<!-- Initialize DataTable -->
<script>
  $(document).ready(function() {
    $('#userTable').DataTable();
  });
</script>

<%- include('../../partials/end') %>
